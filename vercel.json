{
  "builds": [
    {
      "src": "api/*.py",  
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9" 
      }
    },
    {
      "src": "package.json", 
      "use": "@vercel/node"   
      
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",   
      "dest": "/"
     
    }
  ]
}